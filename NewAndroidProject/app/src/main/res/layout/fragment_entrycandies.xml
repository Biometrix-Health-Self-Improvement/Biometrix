<?xml version="1.0" encoding="utf-8"?>
<!--UI for a single 'candy' entry rectangle; IE each past entry has one of this in the recycle view -->
<!--android:columnCount="3"-->
<!--android:rowCount="2"-->
    <!--android:horizontalSpacing="600dp"-->
    <!--android:verticalSpacing="5dp"-->
<!-- Most attributes do NOTHING -->
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/candy_linearl"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:numColumns="auto_fit"
    android:columnWidth="100dp"
    android:stretchMode="columnWidth"
    android:layout_marginLeft="5dp"
    android:gravity="center"
    android:layout_alignParentRight="true"
    android:padding="1dp"



    >
    <!--grid:alignmentMode="alignBounds"-->
    <!--API 21 plus ONLY we are only 19-->

    <TextView
        android:id="@+id/candy_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_row="0"
        android:layout_column="0"
        />

    <TextView
        android:id="@+id/candy_misc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_column="0"
        android:layout_row="2"
        />

    <TextView
        android:id="@+id/candy_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_row="2"
        android:layout_column="1"
        />

</GridLayout>

