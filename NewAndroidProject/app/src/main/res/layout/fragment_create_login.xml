<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rocket.biometrix.Login.CreateLogin">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:weightSum="1"
        style="@style/AppTheme">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameText"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:text="@string/login_username"
            android:enabled="true"
            android:textAlignment="center"
            style="@style/AppTheme"
            android:inputType="none" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/usernameEditText"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:enabled="true"
            android:clickable="true"
            android:inputType="textPersonName"
            style="@style/AppTheme" />

        <EditText
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailText"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:text="@string/login_email"
            android:enabled="true"
            android:textAlignment="center"
            android:inputType="none" />

        <EditText
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/emailEditText"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:enabled="true"
            android:clickable="true"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/AppTheme"
            android:layout_weight="0.11" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordText"
            android:layout_gravity="center_horizontal"
            android:text="@string/login_password"
            android:textAlignment="center"
            style="@style/AppTheme"
            android:textIsSelectable="false"
            android:enabled="true"
            android:focusable="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditText"
            android:enabled="true"
            android:focusable="true"
            android:clickable="true"
            style="@style/AppTheme" />

        <EditText
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmPasswordText"
            android:text="@string/login_confirm_password"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:enabled="true"
            android:focusable="false" />

        <EditText
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmPasswordEditText"
            android:enabled="true"
            android:focusable="true"
            android:clickable="true"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/AppTheme">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                style="@style/AppTheme" />

            <Button
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_cancel"
                android:id="@+id/loginCancelButton"
                android:layout_weight="1"
                android:onClick="cancelButton"
                android:background="@color/colorButtonBackground" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/AppTheme" />

            <Button
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_ok"
                android:id="@+id/loginOKButton"
                android:textAlignment="center"
                android:layout_weight="1"
                android:onClick="createAccountButtonClick"
                android:background="@color/colorButtonBackground" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                style="@style/AppTheme" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
