<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_contact_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rocket.biometrix.Common.ContactUs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/contact_alder_text"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/contact_alder_image"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:text="Branden Alder\n\nbranden.w.alder@gmail.com\n\nhttps://github.com/Trustyn" />

        <ImageView
            android:paddingLeft="-25dp"
            android:id="@+id/contact_alder_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/alder_image" />

        <TextView
            android:id="@+id/contact_riblett_text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/contact_riblett_image"
            android:layout_below="@+id/contact_alder_text"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:text="Troy (TJ) Riblett\n\ntroy.riblett@gmail.com\n\nhttps://github.com/troy-riblett " />

        <ImageView
            android:paddingLeft="-25dp"
            android:id="@+id/contact_riblett_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/contact_alder_image"
            android:src="@mipmap/riblett_image" />

        <TextView
            android:id="@+id/contact_fallon_text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/contact_fallon_image"
            android:layout_below="@+id/contact_riblett_text"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:text="Joseph (JP) Fallon\n\n(“List Professional Email”)\n\nhttps://github.com/JayGarxP " />

        <ImageView
            android:paddingLeft="-25dp"
            android:id="@+id/contact_fallon_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/contact_riblett_image"
            android:src="@mipmap/no_image" />

        <TextView
            android:id="@+id/contact_mcclure_text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/contact_mcclure_image"
            android:layout_below="@+id/contact_fallon_text"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:text="Tanna McClure\n\ntanna.lynn.mcclure@gmail.com\n\nhttps://github.com/tannalynn " />

        <ImageView
            android:paddingLeft="-25dp"
            android:id="@+id/contact_mcclure_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/contact_fallon_image"
            android:src="@mipmap/mcclue_image" />

    </RelativeLayout>


</FrameLayout>
