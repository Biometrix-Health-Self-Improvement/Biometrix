<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="EntryDoneOnClick"
    tools:context="com.rocket.biometrix.ExerciseModule.ExerciseEntry">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/date_prompt"
        android:id="@+id/ex_tv_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/time_prompt"
        android:id="@+id/ex_tv_time"
        android:layout_below="@+id/ex_tv_date"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:id="@+id/ExerciseEntryScrollview"
        style="@style/scrollview_parent_list"
        android:layout_below="@+id/ex_tv_time">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Workout Name: "
                android:layout_marginBottom="5dp"
                android:id="@+id/ex_title_text"
                android:layout_alignBottom="@+id/ex_title"
                android:layout_alignParentStart="true"
                   />
            <EditText
                android:id="@id/ex_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/ex_et_title"
                android:layout_toEndOf="@id/ex_title_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Minutes: "
                android:layout_marginBottom="5dp"
                android:id="@+id/ex_length_text"
                android:layout_alignBottom="@+id/ex_length"
                />
            <EditText
                android:id="@id/ex_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_below="@id/ex_title"
                android:layout_toEndOf="@id/ex_length_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Intensity: "
                android:layout_marginTop="15dp"
                android:id="@+id/ex_intensity_text"
                android:layout_below="@id/ex_length"
                />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ex_intensity_seekbar"
                android:max="10"
                android:layout_alignTop="@+id/ex_intensity_text"
                android:layout_toEndOf="@+id/ex_intensity_text" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ex_type"
                android:layout_marginTop="15dp"
                android:layout_centerVertical="true"
                android:layout_below="@id/ex_intensity_text"
                />
        </RelativeLayout>

    </ScrollView>



    <Button
        android:id="@+id/ex_entry_done_button"
        style="@style/done_button"
        android:onClick="EntryDoneOnClick" />
    <EditText
        android:id="@+id/exDetailsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundSecondary"
        android:hint="Enter notes"
        android:maxLines="1"
        android:layout_above="@id/ex_entry_done_button"
        android:singleLine="true" />


</RelativeLayout>
